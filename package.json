{
  "name": "react-custom-syntax",
  "version": "0.1.0",
  "description": "A lightweight, customizable React syntax editor with rule-based highlighting, prettification, and plugin support",
  "author": "Mohamed Elbaz",
  "license": "MIT",
  "type": "module",
  "main": "./dist/react-custom-syntax.cjs",
  "module": "./dist/react-custom-syntax.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-custom-syntax.js",
      "require": "./dist/react-custom-syntax.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles/style.css": "./dist/react-custom-syntax.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "react",
    "syntax",
    "editor",
    "highlighter",
    "odata",
    "code-editor",
    "syntax-highlighting",
    "prettifier",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bazokhan/react-custom-syntax"
  },
  "bugs": {
    "url": "https://github.com/bazokhan/react-custom-syntax/issues"
  },
  "homepage": "https://github.com/bazokhan/react-custom-syntax#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^8.56.0",
    "jsdom": "^23.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

